		"@faker-js/faker": "^9.2.0",
		"@remix-run/dev": "^2.14.0",
		"@remix-run/node": "^2.14.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@types/bun": "^1.1.13",
		"@types/dotenv": "^8.2.3",
		"@types/inflected": "^2.1.3",
		"@types/prismjs": "^1.26.5",
		"@types/react": "^18.3.12",
